@model IEnumerable<Services>


<div class="text-center" id="services-container">
    <h1 id="service-title">Our Services</h1>
</div>
@if (Model is not null)
{
    <div class="container">
        <div class="row row-cols-3 justify-content-center">
                @foreach(var service in Model)
                   {
                       <div class="col d-flex">
                            <div class="card bg-light bg-gradient mb-3">
                               <img src="@service.ImgeUrl" class="card-img-top" alt="..." style="height: 15rem;"/>
                                   <div class="card-body d-flex flex-column">
                                   <h5 class="card-title">@service.Title</h5>
                                   <p class="card-text">@service.Description</p>
                                   <a href="#" class="btn btn-dark mt-auto align-self-start">Read More</a>
                               </div>
                           </div>
                       </div>
                   } 
        </div>
    </div>
}